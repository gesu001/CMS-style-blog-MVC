{{#each posts as |post| }}
<div>
    <div>
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
            <span>Created by {{post.user.username}} on {{ post.date_created}}</span>
        </h2>
    </div>
    <div>
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>
<ul class="list-group">
   {{#each posts as |post|}}
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <a href="/update/{{post.id}}">{{post.title}}</a>
    <span ><button class="badge bg-primary rounded-pill" data-id="{{post.id}}">DELETE</button></span>
  </li>
     {{/each}}
</ul>
  {{/if}}
</div>

<div>
  <br>
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
   Create New Post
  </button>
</div>
<div class="collapse" id="collapseExample"> 
    <form class="form new-post-form">
        <div class="mb-3">
          <label for="post-name" class="form-label">Title</label>
            <textarea class="form-control" name="post-name" id="post-name" rows="3"></textarea>
        </div>
        <div class="mb-3">
          <label for="post-desc" class="form-label">Content</label>
            <textarea class="form-control" name="post-desc" id="post-desc" rows="3"></textarea>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </div>
    </form>
</div>

<script src="./js/post.js"></script>
